block variables
	title Stock | Stock View Page
extends layout
block content
	div.bodydiv
		br
		h2 Stock View Page

		br
		form#formData
			label Date From: 
			input.queryDate(type='date' name='dateFrom')
			label Date To: 
			input.queryDate(type='date' name='dateTo')
			br
			label.queryPeriod Daily 
				input(type='radio' name='periodQuery' value='d')
			label.queryPeriod Weekly 
				input(type='radio' name='periodQuery' value='w')
			label.queryPeriod Monthly 
				input(type='radio' name='periodQuery' value='m')
		button#button Submit
		br
		div#stockCharts(style='padding-left:5%; padding-right:5%; padding-top:1%')


block logout
	a#logout(href='/users/logout') Logout
	a#logout(href='/stock/addStock') Add Stock
	a#logout(href='/stock/stocklist') List Stock
	a#logout(href='/stock/managemoney') Manage Money
	
