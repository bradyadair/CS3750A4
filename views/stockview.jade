block variables
	title Stock | Stock View Page
extends layout
block content
	div.bodydiv
		br
		h2 Stock View Page

		br
		form
			label Date From: 
			input.queryDate(type='date' name='dateFrom')
			label Date To: 
			input.queryDate(type='date' name='dateTo')
			br
			label.queryPeriod Daily 
				input(type='radio' name='periodQuery' value='Daily')
			label.queryPeriod Weekly 
				input(type='radio' name='periodQuery' value='Weekly')
			label.queryPeriod Monthly 
				input(type='radio' name='periodQuery' value='Monthly')
		button Submit
		br
		div#stockCharts
			br
			#container(style='width:100%; height:400px;')

block logout
	a#logout(href='/users/logout') Logout
	a#logout(href='/stock/stock') Stock
	a#logout(href='/stock/stocklist') List
	a#logout(href='/stock/managemoney') Money
	
