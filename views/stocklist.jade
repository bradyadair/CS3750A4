block variables
	title Stock | Stock List Page
extends layout

block content
	div.bodydiv
		h2 Stock List Page
	div#stockInputDiv.stockInputDiv
		if error
			p.error ERROR: #{error}
		form(id='stockInput-form', class = 'stockInputForm', method='POST', action='')
			| Stock Symbol
			input#stockInput.stockInputBox(type='text', placeholder='Enter a stock to track')
			input#hiddenStatus(type='hidden', name='hiddenStatus')
			input#hiddenTicker(type='hidden', name='hiddenTicker')
			button#stockInput.btn(type='submit', onlick='inputTicker()') Track
	div#stocklist.stock_data


block logout
	a#logout(href='/users/logout') Logout
	a#logout(href='/stock/stock') Stock
	a#logout(href='/stock/stockview') View
	a#logout(href='/stock/managemoney') Money

block scripts
	script(type='text/javascript')
		| var finalHtml =!{JSON.stringify(stockHtml)};
		| var sflag =!{JSON.stringify(sflag)};
		| var tick = !{JSON.stringify(tick)};
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
	script(src='/scripts/watchlist.js') 
	script(type='text/javascript').
		displayWatchList(finalHtml);
	script(src="https://rawgit.com/LeaVerou/awesomplete/gh-pages/awesomplete.min.js")
	script(src="/js/nasdaq.js")
	script(src="/js/nyse.js")
	script(src="/js/autoComplete.js")


